---
import { ThemeToggle } from '@/react/components/ThemeToggle'
---

<header
    class="sticky top-0 z-50 w-full bg-background/80 backdrop-blur supports-[backdrop-filter]:bg-background/80"
>
    <div class="container mx-auto px-4 flex h-14 items-center">
        <div class="flex items-center">
            <a href="/" class="flex items-center space-x-2">
                <span class="text-xl font-bold">OpenFav</span>
            </a>
        </div>
        <div class="flex-1 flex items-center justify-between">
            <div class="flex-1 hidden md:block">
                <!-- Add search component here later -->
            </div>
            <nav class="flex items-center space-x-4">
                <ThemeToggle client:load />
            </nav>
        </div>
    </div>
</header>
